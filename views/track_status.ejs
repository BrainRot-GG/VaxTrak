</div>

  <header>
    <!-- Reserved for Nav Bar (Currently Empty) -->
  </header>

  <!-- Vaccine Tracker Section -->
  <main class="main-grid">
    <!-- Left: Vaccine Tracker Section -->
    <section class="vaccine-tracker-section">
      <h1>Vaccine Status Tracker</h1>
    
      <!-- Family Member Selector -->
      <div class="family-select">
        <label for="family">Select Family Member:</label>
        <select id="memberSelect">
          <option value="" disabled selected>Select a member</option>
          <% extract_member.forEach(function(member, index) { %>
            <option value="<%= index %>"><%= member.name %></option>
          <% }) %>
      </select>
      </div>
      
    <!-- Vaccine Group Cards Here -->
      <div class="tracker-section">
        <div class="group-card">
          <h2>0 - 5 Years</h2>
          <label><input type="checkbox" class="vaccineCheck" value="BCG"> BCG</label>
          <label><input type="checkbox" class="vaccineCheck" value="Hepatitis"> Hepatitis B</label>
          <label><input type="checkbox" class="vaccineCheck" value="DTP"> DTP</label>
          <label><input type="checkbox" class="vaccineCheck" value="Polio"> Polio</label>
        </div>
    
        <div class="group-card">
          <h2>6 - 18 Years</h2>
          <label><input type="checkbox" class="vaccineCheck" value="MMR"> MMR</label>
          <label><input type="checkbox" class="vaccineCheck" value="Tdap"> Tdap</label>
          <label><input type="checkbox" class="vaccineCheck" value="HPV"> HPV</label>
        </div>
    
        <div class="group-card">
          <h2>Adult (18+)</h2>
          <label><input type="checkbox" class="vaccineCheck" value="COVID-19"> COVID-19</label>
          <label><input type="checkbox" class="vaccineCheck" value="Flu Shot"> Flu Shot</label>
          <label><input type="checkbox" class="vaccineCheck" value="Hepatitis A"> Hepatitis A</label>
          <label><input type="checkbox" class="vaccineCheck" value="Typhoid"> Typhoid</label>
        </div>
      </div>
    </section>
  
    <!-- Right: Appointment Booking Section -->
    <aside class="appointment-section">
      <h2>Book Appointment</h2>
  
      <label for="date">Select Date:</label>
      <input type="date" id="date" />
  
      <label for="time">Select Time Slot:</label>
      <select id="time">
        <option value="">-- Select Time Slot --</option>
        <option value="9AM">9:00 AM</option>
        <option value="11AM">11:00 AM</option>
        <option value="2PM">2:00 PM</option>
        <option value="4PM">4:00 PM</option>
      </select>
  
      <button id="findHospitalsBtn" onclick="confirmAppointment()">Confirm</button>
      <p id="confirmationMsg"></p>
    </aside>
  </main>
  

  <footer>
    <p>&copy; 2025 HealthCare India. All rights reserved.</p>
  </footer>
<script>
  const members = <%- JSON.stringify(extract_member) %>;
  const recommendedMap = <%- JSON.stringify(recommendedMap) %>;
</script>
  <script src="/javascripts/track_status_management.js"></script>
  
</body>

</html>